
<% if @event.errors.any? %>
  <% @event.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
<% end %>

<%= form_for [ :admin, @event ] do |f| %>
  <label>Event title:</label>
  <%= f.text_field :title %><br>
  <label>location</label>
  <%= f.text_field :location %><br>
  <label>Available spaces</label>
  <%= f.number_field :spaces_available, min: 0 %><br>
  <label>Workhop:</label>
   <%= f.collection_select(:workshop_id, Workshop.all, :id, :title, {include_blank: 'No workshop'}) %><br>
  <label>Date:</label>
  <%= f.date_field :date %><br>
  <label>Image:</label>
  <%= f.text_field :image %>
  <br><br>
  <label>Sponsor:</label>
  <%= f.collection_select(:sponsor_id, Sponsor.all, :id, :company_name) %><br />
  <%= f.check_box :status %><label> Public event</label><br>
  <%= f.submit 'submit' %>
<% end %>
<br>
<%= link_to "[back]", admin_events_path %>
