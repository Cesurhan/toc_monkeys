<div class="container">
  <h1>Events:</h1>
  <%= link_to "New event", new_admin_event_path %>
  <section>
    <table>
      <h3>Public:</h3>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Spaces available</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

      <% @events.public_events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.sponsor.company_name %></td>
        <td><%= event.spaces_available %></td>
        <td><%= button_to "[details]", admin_event_path(event.id), method: :get %>  </td>
        <td><%= button_to "[edit]", edit_admin_event_path(event.id), method: :get %></td>
        <td><%= button_to "[delete]", admin_event_path(event.id), method: :delete, data: { confirm: "Are you sure you want to delete event: \"#{event.title}\"?" } %></td>
      </tr>
      <% end %>
    </table>
  </section>

  <section>
    <table>
      <h3>In company:</h3>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Spaces available</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

      <% @events.incompany_events.each do |event| %>
      <tr>
        <td><%= event.title %>  </td>
        <td><%= event.sponsor.company_name %>  </td>
        <td><%= event.spaces_available %>  </td>
        <td><%= button_to "[details]", admin_event_path(event.id), method: :get %>   </td>
        <td><%= button_to "[edit]", edit_admin_event_path(event.id), method: :get %>  </td>
        <td><%= button_to "[delete]", admin_event_path(event.id), method: :delete, data: { confirm: "Are you sure you want to delete event: \"#{event.title}\"?" } %> </td>
      </tr>
      <% end %>
    </table>
  </section>

</div>
