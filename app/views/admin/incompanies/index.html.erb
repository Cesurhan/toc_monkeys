<div class="row">
  <div class="col-lg-6">
    <div class="input-group">
      <%= form_tag(root_path, :method => "get", id: "search-form", class: "input-group") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Company", class: "form-control" %>
      <span class="input-group-btn">
        <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
      </span>
      <% end %>
    </div>
    <!-- /input-group -->
  </div>
  <!-- /.col-lg-6 -->
</div>
<hr>
<% if !@companies.nil? %>
  <table>
    <tr>
      <th style="width: 20%">first_name</th>
      <th style="width: 20%">last_name</th>
      <th style="width: 20%">company_name</th>
      <th style="width: 20%">email</th>
      <th style="width: 20%">date</th>
      <th style="width: 20%">View</th>
      <th style="width: 20%">Edit</th>
      <th style="width: 20%">Delete</th>
    </tr>
    <% @companies.each do |company|%>
    <tr>
      <td style="width: 20%"><%= company.first_name%></td>
      <td style="width: 20%"><%= company.last_name%></td>
      <td style="width: 20%"><%= company.company_name%></td>
      <td style="width: 20%"><%= company.email%></td>
      <td style="width: 20%"><%= company.date%></td>
      <td style="width: 20%"><%= link_to "View", admin_incompany_path(company) %></td>
      <td style="width: 20%"><%= link_to "Edit", edit_admin_incompany_path(company) %></td>
      <td style="width: 20%"><%= link_to "Delete", admin_incompany_path(company), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger"%></td>
    </tr>
    <% end %>
  </table>
<% end %>
